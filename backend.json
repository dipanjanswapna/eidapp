{
  "entities": {
    "nglUser": {
      "title": "NGL User",
      "description": "An NGL user profile.",
      "type": "object",
      "properties": {
        "username": { "type": "string" },
        "pin": { "type": "string" },
        "name": { "type": "string" },
        "gender": { "type": "string", "enum": ["male", "female", "other"] },
        "profession": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["username", "pin", "name", "gender", "profession", "createdAt"]
    },
    "nglMessage": {
      "title": "NGL Message",
      "description": "An anonymous message sent to an NGL user.",
      "type": "object",
      "properties": {
        "receiverUsername": { "type": "string" },
        "senderTag": { "type": "string" },
        "message": { "type": "string" },
        "isReplied": { "type": "boolean" },
        "reply": { "type": "string" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["receiverUsername", "senderTag", "message", "isReplied", "createdAt"]
    },
    "eidCard": {
      "title": "Eid Card",
      "description": "A digital Eid card with a personal message and payment options.",
      "type": "object",
      "properties": {
        "recipientName": { "type": "string" },
        "message": { "type": "string" },
        "theme": { "type": "string", "enum": ["royal-blue", "bright-red", "golden-yellow"] },
        "bkashNumber": { "type": "string" },
        "nagadNumber": { "type": "string" },
        "rocketNumber": { "type": "string" },
        "targetAmount": { "type": "number" },
        "isPaid": { "type": "boolean" },
        "createdAt": { "type": "string", "format": "date-time" }
      },
      "required": ["recipientName", "message", "theme", "createdAt"]
    }
  },
  "auth": {
    "providers": []
  },
  "firestore": {
    "/ngl_users/{username}": {
        "schema": { "$ref": "#/entities/nglUser" },
        "description": "NGL user profiles, with the username as the document ID."
    },
    "/ngl_messages/{messageId}": {
        "schema": { "$ref": "#/entities/nglMessage" },
        "description": "All NGL messages."
    },
    "/eid_cards/{cardId}": {
        "schema": { "$ref": "#/entities/eidCard" },
        "description": "User-generated digital Eid cards."
    }
  }
}
